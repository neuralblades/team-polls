{
  "name": "team-polls",
  "version": "1.0.0",
  "description": "Real-time team polling application",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "dev:custom": "node scripts/start-dev.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "client": "cd client && npm run dev",
    "server": "nodemon server/index.js",
    "dev:full": "concurrently \"npm run server\" \"npm run client\"",
    "dev:full:custom": "concurrently \"npm run dev:custom\" \"npm run client\"",
    "init-db": "node scripts/init-db.js",
    "build:client": "cd client && npm run build",
    "load-test": "artillery run tests/load-tests/basic.yml",
    "load-test:heavy": "artillery run tests/load-tests/heavy.yml"
  },
  "keywords": [
    "polls",
    "real-time",
    "websockets",
    "team"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@socket.io/redis-adapter": "^8.2.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.13",
    "rate-limit-redis": "^4.2.0",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "prom-client": "^15.1.0"
  },
  "devDependencies": {
    "artillery": "^2.0.3",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  }
}
